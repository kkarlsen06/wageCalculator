{
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "baseUrl": ".",
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app",
    "lib"
  ],
  "exclude": ["node_modules"]
}
