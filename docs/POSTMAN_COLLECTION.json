{
  "info": {
    "name": "WageCalculator API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Org Settings",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{TEST_AUTH_TOKEN}}" }
        ],
        "url": { "raw": "{{BASE_URL}}/org-settings", "host": ["{{BASE_URL}}"], "path": ["org-settings"] }
      }
    },
    {
      "name": "Update Org Settings",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{TEST_AUTH_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"break_policy\": \"none\"\n}" },
        "url": { "raw": "{{BASE_URL}}/org-settings", "host": ["{{BASE_URL}}"], "path": ["org-settings"] }
      }
    },
    {
      "name": "List Employees",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{TEST_AUTH_TOKEN}}" }
        ],
        "url": { "raw": "{{BASE_URL}}/employees", "host": ["{{BASE_URL}}"], "path": ["employees"] }
      }
    },
    {
      "name": "Create Employee",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{TEST_AUTH_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Alice\",\n  \"tariff_level\": 3\n}" },
        "url": { "raw": "{{BASE_URL}}/employees", "host": ["{{BASE_URL}}"], "path": ["employees"] }
      }
    },
    {
      "name": "List Employee Shifts",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{TEST_AUTH_TOKEN}}" }
        ],
        "url": { "raw": "{{BASE_URL}}/employee-shifts", "host": ["{{BASE_URL}}"], "path": ["employee-shifts"] }
      }
    },
    {
      "name": "Create Employee Shift",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{TEST_AUTH_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"employee_id\": \"{{EMPLOYEE_ID}}\",\n  \"shift_date\": \"2025-01-15\",\n  \"start_time\": \"09:00\",\n  \"end_time\": \"17:00\"\n}" },
        "url": { "raw": "{{BASE_URL}}/employee-shifts", "host": ["{{BASE_URL}}"], "path": ["employee-shifts"] }
      }
    }
  ],
  "variable": [
    { "key": "BASE_URL", "value": "http://localhost:5173" },
    { "key": "TEST_AUTH_TOKEN", "value": "" },
    { "key": "EMPLOYEE_ID", "value": "" }
  ]
}


