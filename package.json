  "bugs": {
    "url": "https://github.com/kkarlsen06/wageCalculator/issues"
  },
  "homepage": "https://github.com/kkarlsen06/wageCalculator#readme",
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "openai": "^5.12.0"
  },
  "type": "module"
}
