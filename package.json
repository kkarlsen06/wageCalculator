{
  "private": true,
  "workspaces": [
    "marketing",
    "app",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev": "kill -9 $(lsof -t -i:3000) || run-p dev:*",
    "dev:app": "npm --workspace app run dev || echo 'app: no dev script'",
    "dev:server": "npm --workspace server run dev:server || echo 'server: no dev script'",
    "dev:marketing": "npm --workspace marketing run dev",
    "build": "run-p build:*",
    "build:marketing": "npm --workspace marketing run build || echo 'marketing: no build needed'",
    "build:app": "npm --workspace app run build || echo 'app: no build script'",
    "clean": "node scripts/clean-dists.mjs",
    "clean:all": "node scripts/clean-dists.mjs",
    "preview": "kill -9 $(lsof -t -i:3000) || run-s clean build preview:start",
    "preview:start": "run-p preview:marketing preview:app dev:server",
    "preview:marketing": "npm --workspace marketing run preview",
    "preview:app": "npm --workspace app run preview",
    "smoke": "node scripts/smoke-spa.mjs",
    "test": "npm --workspace server run test",
    "test:auth": "npm --workspace server run test:auth",
    "test:payroll": "npm --workspace server run test:payroll"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
